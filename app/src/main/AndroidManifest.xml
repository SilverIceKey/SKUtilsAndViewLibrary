<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.silverknife.meizhi">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.silverknife.meizhi.features.feature_test.TabsActivity" />
        <activity android:name="com.silverknife.meizhi.features.feature_gank.GankDetailActivity" />
        <activity android:name="com.silverknife.meizhi.features.feature_gank.PhotoViewActivity" />
        <activity android:name="com.silverknife.meizhi.features.feature_test.BlockAnimMoveActivity" />
        <activity android:name="com.silverknife.meizhi.features.feature_test.ShareActivity"/>
        <activity android:name="com.silverknife.meizhi.features.feature_test.RNActivity"/>
        <activity android:name=".features.feature_news.NewsDetailActivity"/>
        <activity android:name="com.silverknife.meizhi.features.feature_main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".services.CustomService"
            android:exported="true"
            android:enabled="true"
            android:process=":custom_service"/>

        <meta-data
            android:name="design_width_in_dp"
            android:value="360" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="480" />
    </application>


</manifest>